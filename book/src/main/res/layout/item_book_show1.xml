<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="6dp"
    android:background="?attr/selectableItemBackground">

    <ImageView
        android:id="@+id/iv_book_bg"
        android:layout_width="59dp"
        android:layout_height="80dp"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_common_iv_bg" />

    <TextView
        android:id="@+id/tv_book_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="书名"
        android:textColor="@color/text_gray_one"
        android:textSize="14sp"
        app:layout_constraintLeft_toRightOf="@+id/iv_book_bg"
        app:layout_constraintTop_toTopOf="@+id/iv_book_bg" />


    <TextView
        android:id="@+id/tv_book_desc"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginLeft="8dp"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:lines="2"
        android:text="图书描述"
        android:textColor="@color/text_gray_four"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/tv_book_author"
        app:layout_constraintLeft_toRightOf="@+id/iv_book_bg"
        app:layout_constraintTop_toBottomOf="@+id/tv_book_name" />

    <TextView
        android:id="@+id/tv_book_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:text="作者"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_book_bg"
        app:layout_constraintLeft_toRightOf="@+id/iv_book_bg" />

    <TextView
        android:id="@+id/tv_book_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:text="图书种类"
        android:textColor="@color/text_second_red"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_book_bg"
        app:layout_constraintLeft_toRightOf="@+id/tv_book_author" />
</android.support.constraint.ConstraintLayout>