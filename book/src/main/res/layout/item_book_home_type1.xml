<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="8dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="8dp">

    <TextView
        android:id="@+id/tv_book_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:ellipsize="end"
        android:gravity="center"
        android:lines="1"
        android:text="都市草根崛起"
        android:textColor="@color/text_gray_one"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_book_decr"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:ellipsize="end"
        android:lines="2"
        android:text="都市草根崛起描述都市草根崛起描述都市草根崛起描述都市草根崛起描述都市草根崛起描述"
        android:textColor="@color/text_gray_four"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@+id/tv_book_name" />

    <ImageView
        android:id="@+id/iv_book_bg"
        android:layout_width="match_parent"
        android:layout_height="148dp"
        android:layout_marginTop="2dp"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_common_iv_bg"
        app:layout_constraintTop_toBottomOf="@+id/tv_book_decr" />

</android.support.constraint.ConstraintLayout>