<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/windows_bg">


    <ImageView
        android:id="@+id/mine_iv_item_type_tag"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginLeft="12dp"
        android:src="@mipmap/ic_type_tag"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_item_type_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="12dp"
        android:paddingBottom="6dp"
        android:paddingTop="6dp"
        android:text="种类标题"
        android:textColor="@color/text_gray_four"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/mine_iv_item_type_tag"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="12dp"
        android:drawableRight="@mipmap/ic_more"
        android:paddingBottom="6dp"
        android:paddingTop="6dp"
        android:text="更多"
        android:textColor="@color/text_gray_four"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>