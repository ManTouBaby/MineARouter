<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:visibility="visible">

    <include layout="@layout/include_driver_line_h4dp" />

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="8dp">

        <TextView
            android:id="@+id/mine_same_book_commend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="同类推荐"
            android:textColor="@color/text_gray_one"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/mine_same_book_change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="8dp"
            android:drawableRight="@mipmap/ic_book_change"
            android:gravity="center_vertical"
            android:text="换一批"
            android:textColor="@color/text_gray_three"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/mine_same_book_commend"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/mine_same_book_commend" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/mine_same_book_commend">

            <android.support.constraint.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:padding="6dp">

                <ImageView
                    android:id="@+id/iv_book_bg"
                    android:layout_width="70dp"
                    android:layout_height="90dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/ic_common_iv_bg" />

                <TextView
                    android:id="@+id/tv_book_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:lines="1"
                    android:text="书名"
                    android:textColor="@color/text_gray_one"
                    android:textSize="14sp"
                    app:layout_constraintLeft_toLeftOf="@+id/iv_book_bg"
                    app:layout_constraintRight_toRightOf="@+id/iv_book_bg"
                    app:layout_constraintTop_toBottomOf="@+id/iv_book_bg" />

            </android.support.constraint.ConstraintLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <android.support.constraint.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:padding="6dp">

                <ImageView
                    android:id="@+id/iv_book_bg"
                    android:layout_width="70dp"
                    android:layout_height="90dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/ic_common_iv_bg" />

                <TextView
                    android:id="@+id/tv_book_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:lines="1"
                    android:text="书名"
                    android:textColor="@color/text_gray_one"
                    android:textSize="14sp"
                    app:layout_constraintLeft_toLeftOf="@+id/iv_book_bg"
                    app:layout_constraintRight_toRightOf="@+id/iv_book_bg"
                    app:layout_constraintTop_toBottomOf="@+id/iv_book_bg" />

            </android.support.constraint.ConstraintLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <android.support.constraint.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:padding="6dp">

                <ImageView
                    android:id="@+id/iv_book_bg"
                    android:layout_width="70dp"
                    android:layout_height="90dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/ic_common_iv_bg" />

                <TextView
                    android:id="@+id/tv_book_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:lines="1"
                    android:text="书名"
                    android:textColor="@color/text_gray_one"
                    android:textSize="14sp"
                    app:layout_constraintLeft_toLeftOf="@+id/iv_book_bg"
                    app:layout_constraintRight_toRightOf="@+id/iv_book_bg"
                    app:layout_constraintTop_toBottomOf="@+id/iv_book_bg" />

            </android.support.constraint.ConstraintLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <android.support.constraint.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:padding="6dp">

                <ImageView
                    android:id="@+id/iv_book_bg"
                    android:layout_width="70dp"
                    android:layout_height="90dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/ic_common_iv_bg" />

                <TextView
                    android:id="@+id/tv_book_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:lines="1"
                    android:text="书名"
                    android:textColor="@color/text_gray_one"
                    android:textSize="14sp"
                    app:layout_constraintLeft_toLeftOf="@+id/iv_book_bg"
                    app:layout_constraintRight_toRightOf="@+id/iv_book_bg"
                    app:layout_constraintTop_toBottomOf="@+id/iv_book_bg" />

            </android.support.constraint.ConstraintLayout>

        </LinearLayout>
    </android.support.constraint.ConstraintLayout>

</LinearLayout>