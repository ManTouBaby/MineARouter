<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/windows_bg"
    android:orientation="horizontal"
    android:paddingBottom="8dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="8dp">

    <TextView
        android:id="@+id/tv_book_type1"
        android:layout_width="0dp"
        android:layout_height="32dp"
        android:layout_weight="1"
        android:background="#653"
        android:gravity="center"
        android:textColor="@color/text_white" />

    <TextView
        android:id="@+id/tv_book_type2"
        android:layout_width="0dp"
        android:layout_height="32dp"
        android:layout_marginLeft="8dp"
        android:layout_weight="1"
        android:background="#73147a"
        android:gravity="center"
        android:textColor="@color/text_white" />

    <TextView
        android:id="@+id/tv_book_type3"
        android:layout_width="0dp"
        android:layout_height="32dp"
        android:layout_marginLeft="8dp"
        android:layout_weight="1"
        android:background="#14762c"
        android:gravity="center"
        android:textColor="@color/text_white" />

    <TextView
        android:id="@+id/tv_book_type4"
        android:layout_width="0dp"
        android:layout_height="32dp"
        android:layout_marginLeft="8dp"
        android:layout_weight="1"
        android:background="#7b122a"
        android:gravity="center"
        android:textColor="@color/text_white" />
</LinearLayout>